<%= form_with url: ai_consultant_path,
              method: :post,
              data: { turbo: false, controller: nil, action: "submit->ai-chat#submit" },
              html: { class: "border-t p-2 flex items-center gap-2", autocomplete: "off", "data-ai-chat-target": "form" } do %>
  <%= text_field_tag :message, nil,
        placeholder: "Ask me anythingâ€¦",
        class: "flex-1 border rounded px-3 py-2 text-sm",
        data: { "ai-chat-target": "input" } %>

  <button type="submit"
          class="bg-blue-500 hover:bg-blue-600 text-white text-sm font-medium rounded px-3 py-2"
          data-ai-chat-target="sendButton">
    Send pulii
  </button>

  <button type="button"
          class="hidden bg-red-500 hover:bg-red-600 text-white text-sm font-medium rounded px-3 py-2"
          data-action="ai-chat#stop"
          data-ai-chat-target="stopButton">
    Stop
  </button>
<% end %>
