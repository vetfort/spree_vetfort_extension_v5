<div data-ai-chat-target="typingIndicator" class="hidden mt-3">
  <div class="flex items-start  gap-2.5">
    <img class="w-10 h-10 rounded-full" src="<%= SpreeVetfortExtensionV5::Images.bot_avatar %>" alt="Jese image">
    <div class="flex flex-col  leading-1.5 p-3 border-gray-200 bg-purple-200 rounded-e-xl rounded-es-xl dark:bg-purple-200">
        <p class="text-sm font-normal text-gray-900 dark:text-white animate-pulse">
          <svg width="45" height="20" viewBox="0 0 45 20" xmlns="http://www.w3.org/2000/svg" aria-label="Compact chaotic loading animation">
            <style>
              .dot {
                fill: rgb(30 58 138);
              }
            </style>

            <circle cx="10" cy="12" r="3" class="dot">
              <animate
                attributeName="cy"
                values="12;5;12;10;12"
                keyTimes="0;0.25;0.5;0.75;1"
                dur="1.2s"
                repeatCount="indefinite"
                begin="0s"
              />
            </circle>

            <circle cx="20" cy="12" r="3" class="dot">
              <animate
                attributeName="cy"
                values="12;8;12;14;12"
                keyTimes="0;0.25;0.5;0.75;1"
                dur="1.2s"
                repeatCount="indefinite"
                begin="0.2s"
              />
              <animate
                attributeName="cx"
                values="20;22;20"
                dur="1.2s"
                repeatCount="indefinite"
                begin="0.2s"
              />
            </circle>

            <circle cx="30" cy="12" r="3" class="dot">
              <animate
                attributeName="cy"
                values="12;6;12;10;12"
                keyTimes="0;0.25;0.5;0.75;1"
                dur="1.2s"
                repeatCount="indefinite"
                begin="0.4s"
              />
              <animate
                attributeName="r"
                values="3;4;3"
                dur="1.2s"
                repeatCount="indefinite"
                begin="0.4s"
              />
            </circle>
          </svg>
        </p>
    </div>
  </div>
</div>
