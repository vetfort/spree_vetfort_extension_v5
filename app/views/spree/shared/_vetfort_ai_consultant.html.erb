<div data-dial-init class="fixed end-6 bottom-6 group">
    <div id="chat-bot-dialog" class="flex flex-col items-center hidden mb-4 space-y-2">
       chat bot dialog placeholder
    </div>
    <button
      type="button"
      data-dial-toggle="chat-bot-dialog"
      data-dial-trigger="click"
      aria-controls="chat-bot-dialog"
      aria-expanded="false"
      class="flex items-center justify-center text-white bg-blue-300 rounded-full w-14 h-14 hover:bg-blue-400 focus:ring-4 focus:ring-blue-300 focus:outline-none"
    >
      <img class="w-10 h-10 rounded-sm" src="<%= SpreeVetfortExtensionV5::Images.bot_avatar %>" alt="Chat Bot Avatar">
    </button>
</div>
