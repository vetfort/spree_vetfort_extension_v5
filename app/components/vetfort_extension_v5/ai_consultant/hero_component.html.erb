<div
  data-controller="ai-chat"
  class="vetfort--ai-consultant__welcome-component"
  data-ai-chat-target="cta"
>
  <div class="vetfort--ai-consultant__welcome-component-bg">
    <div class="flex items-center justify-between w-full">
      <div class="flex items-center justify-start gap-2">
        <img class="vetfort--ai-consultant__welcome-component-avatar"
          src="<%= SpreeVetfortExtensionV5::Images.bot_avatar %>"
          alt="Dasha"
        >
        <div class="vetfort--ai-consultant__welcome-component-title">
          <%= t('vetfort.ai_consultant.welcome_component.title').html_safe %>
        </div>
      </div>

      <button
        type="button"
        data-action="click->ai-chat#close"
        class="vetfort--ai-consultant__welcome-component-close"
      >
        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
        </svg>
        <span class="sr-only">Close menu</span>
      </button>
    </div>

    <p class="vetfort--ai-consultant__welcome-component-suggestions">
      <%= t('vetfort.ai_consultant.welcome_component.suggestions').html_safe %>
    </p>

    <div class="vetfort--ai-consultant__welcome-component-suggestions-list">
      <% suggestions.each do |suggestion| %>
        <div class="vetfort--ai-consultant__welcome-component-suggestions-list-item">
          <%= suggestion %> <i class="ti ti-sparkles"></i>
        </div>
      <% end %>
    </div>

    <div class="vetfort--ai-consultant__welcome-component-input">
      <textarea
        name="chat"
        id="chat-input"
        rows="3"
        class="vetfort--ai-consultant__welcome-component-input-textarea"
        placeholder="Type a message… I’m all ears (well, algorithms really)."
      ></textarea>

      <button type="button" class="vetfort--ai-consultant__welcome-component-input-button">
        <svg class="w-6 h-6" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
          <path fill-rule="evenodd" d="M12 2a1 1 0 0 1 .932.638l7 18a1 1 0 0 1-1.326 1.281L13 19.517V13a1 1 0 1 0-2 0v6.517l-5.606 2.402a1 1 0 0 1-1.326-1.281l7-18A1 1 0 0 1 12 2Z" clip-rule="evenodd"/>
        </svg>
      </button>
    </div>
  </div>
</div>
